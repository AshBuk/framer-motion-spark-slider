{
  "name": "@ashbuk/spark-slider",
  "version": "1.0.0",
  "private": false,
  "description": "SparkSlider â€“ lightweight Framer Motion carousel component and hook",
  "author": "Asher Buk <2asherbuk@gmail.com> (https://github.com/AshBuk)",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "style": "./dist/spark-slider.css",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AshBuk/framer-motion-spark-slider.git",
    "directory": "packages/spark-slider"
  },
  "homepage": "https://github.com/AshBuk/framer-motion-spark-slider/tree/main/packages/spark-slider#readme",
  "bugs": {
    "url": "https://github.com/AshBuk/framer-motion-spark-slider/issues"
  },
  "keywords": [
    "react",
    "carousel",
    "slider",
    "framer-motion",
    "nextjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/AshBuk"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "framer-motion": ">=12"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:css": "mkdir -p dist && cp ../../src/components/SparkSlider/spark-slider.css dist/",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs && npm run build:css",
    "prepublishOnly": "npm run clean && npm run build"
  }
}
