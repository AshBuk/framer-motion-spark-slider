{
  "name": "framer-motion-spark-slider",
  "version": "0.1.5",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Framer Motion slider demo with Next.js and simple image upload API",
  "author": "Asher Buk <2asherbuk@gmail.com> (https://github.com/AshBuk)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "pretest": "npm -w packages/spark-slider run build && npm run build",
    "test": "jest && NODE_TEST_PARALLEL=0 node --test tests/integration/*.spec.*",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "fix-all": "npm run lint:fix && npm run format",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@vercel/blob": "^1.1.1",
    "framer-motion": "^12.23.12",
    "next": "^15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@next/eslint-plugin-next": "^15.5.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "glob": "^10.4.5"
  }
}
